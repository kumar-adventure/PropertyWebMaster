.container-fluid
  %h1 Properties posted
  .col-md-12
    %div
      - @properties.each do |property|
        .property_row
          .row-fluid
            .span2= image_tag property.photo.url 
            .span6
              %b= link_to property.title, property, class: 'primary-link'
              %br/
              %b Address: 
              #{property.address}
              %br/
              %b Area: 
              #{property.saleable_area}
              %br/
              %b Total no of rooms: 
              #{property.total_rooms}
              %br/
              %b Expiration Date:
              #{property.expiration_date}
            .span3
              %b Price #{property.price}
              %br/
              %br/
              = link_to "View full details >>", property
