= form_for @contact_message do |f|
  - if @contact_message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contact_message.errors.count, "error")} prohibited this contact_message from being saved:"
      %ul
        - @contact_message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Message
    = f.text_area :content
    = f.hidden_field :user_id, value: current_user.id
    = f.hidden_field :contact_request_id, value: @contact_request.id
  .actions
    = f.submit 'Send'
